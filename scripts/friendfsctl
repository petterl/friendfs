#!/bin/bash 

ERL_SNAME=friendfs
ERL_CALL=erl_call
ROOTDIR=`cd $(dirname $0)/..;pwd`
if [ -z "$RELDIR" ]; then
    RELDIR=$ROOTDIR/releases
fi
FRIENDFS_CONF=${FRIENDFS_CONF:-/etc/friendfs.conf}

function check_config() {
    # Check validity of config file
    if [ ! -f $1 ]; then
        return 1
    fi
    return 0
}

function check_running() {
    # Check if friendfs daemon is running
    $ERL_CALL -sname $ERL_SNAME -a "ok" 2>/dev/null 1>&2
    return $?
}

function check_environment() {
    # Check that run_erl has been built
    if [ ! -f $ROOTDIR/bin/run_erl ]; then
        return 1
    fi
    return 0
}

function start() {
    if check_running; then
        echo "Already started"
        exit 1
    fi
    echo -n "Starting..."
    if ! check_config $FRIENDFS_CONF; then
        FRIENDFS_CONF=$HOME/.friendfs.conf
        if ! check_config $FRIENDFS_CONF; then
            echo "failed"
            echo "Copying config template to $FRIENDFS_CONF"
            cp $ROOTDIR/friendfs/doc/friendfs.conf $FRIENDFS_CONF
            echo ""
            echo "Update $FRIENDFS_CONF with your configuration and start again"
            echo ""
            exit 100
        fi
    fi
    if ! check_environment; then
        echo "failed"
        echo "Make sure you have run make first"
        exit 1
    fi
    START_ERL_DATA=${1:-$RELDIR/start_erl.data}
    $ROOTDIR/bin/run_erl -daemon $ROOTDIR/pipes/ $ROOTDIR/log "exec $ROOTDIR/bin/start_erl $ROOTDIR $RELDIR $START_ERL_DATA -pa $ROOTDIR/patches/ -sname friendfs -friendfs config_path '\"$FRIENDFS_CONF\"' " 
    # TODO: check that it started
    echo "done"
}

function stop() {
    if check_running; then
        $ERL_CALL -sname $ERL_SNAME -a "init stop []" >/dev/null
        echo "Stopped"
        exit 0
    fi
    echo "Already stopped"
}

function restart() {
    stop
    sleep 1
    start
}

function status() {
    if check_running; then
        $ERL_CALL  -sname $ERL_SNAME -a "friendfsctrl status []" 
        exit 0
    fi
    echo "Not running"
}

function connect() {
    $ROOTDIR/bin/to_erl $ROOTDIR/pipes/
}

function help() {
    echo "The valid commands are: "
    echo "   start - start the friendfs daemon"
    echo "   stop - stop the friendfs daemon"
    echo "   restart - restart the friendfs daemon"
    echo "   status - get status of running daemon"
    echo "   connect - connect to the friendfs daemon"
    echo ""
    echo "To mount a filesystem see 'friendfs'"
}


case $1 in
    'status') status ;;
    'start') start ;;
    'stop') stop ;;
    'restart') restart ;;
    'connect') connect ;;
    *) echo "$1 is not a valid command"
       help ;;
esac

